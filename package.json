{
  "name": "mdcopilot",
  "version": "0.0.3",
  "scripts": {
    "dev": "tsx ./src/cli.ts",
    "format": "prettier --write .",
    "build": "bun build src/cli.ts --minify --outfile dist/cli.mjs --target=node",
    "release": "utools release --git-tag --github-release --changelog",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "mdcopilot": "./dist/cli.mjs"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^1.2.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node-fetch": "^2.6.12",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "@types/yargs-parser": "^21.0.3",
    "@umijs/tools": "^0.1.34",
    "ai": "^4.1.61",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "node-fetch": "2",
    "pathe": "^2.0.3",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "vitest": "^3.0.9",
    "yargs-parser": "^21.1.1",
    "zod": "^3.24.2"
  },
  "authors": [
    "chencheng <sorrycc@gmail.com> (https://github.com/sorrycc)"
  ],
  "keywords": [
    "cli",
    "mdcopilot",
    "markdown",
    "copilot"
  ],
  "license": "MIT",
  "description": "Markdown Copilot CLI.",
  "volta": {
    "node": "22.11.0",
    "pnpm": "10.8.0"
  }
}
